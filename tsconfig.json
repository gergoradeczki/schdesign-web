{
	"compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
		"baseUrl": "./src/",
		"paths": { "@/*": ["*"], "*": [""] },
		"importsNotUsedAsValues": "error",
		"strict": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"include": ["*.config.js", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "public"]
}
